<% provide(:title, '新規登録') %>
<h1>新規作成</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/error_messages' %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :email %>
  <%= f.email_field :email %>
  
  <%= f.label :department %>
  <%= f.text_field :department %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmtion %>
  
  <%= f.submit "新規作成" %>
<% end %>

